<% flash.each do |name, msg| %>
	<% if name == "notice" %>
		<div class="alert flash-messages alert-success alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= content_tag :p, msg, id: "flash_#{name}" if msg.is_a?(String) %>
		</div>
	<% elsif name == "alert" %>
		<div class="alert flash-messages alert-warning alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= content_tag :p, msg, id: "flash_#{name}" if msg.is_a?(String) %>
		</div>
	<% else %>
		<div class="alert flash-messages alert-info alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= content_tag :p, msg, id: "flash_#{name}" if msg.is_a?(String) %>
		</div>
	<% end %>
<% end %>