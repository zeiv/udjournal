<h1>Listing papers</h1>

<table>
  <thead>
    <tr>
      <th>Sabstract</th>
      <th>User</th>
      <th>Department</th>
      <th>Date published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.sabstract_id %></td>
        <td><%= paper.user_id %></td>
        <td><%= paper.department_id %></td>
        <td><%= paper.date_published %></td>
        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

